    "test": "npm run test:cli",
    "build-cli": "tsc --project tsconfig.cli.json",
    "update-template": "node scripts/update-template.js",
    "prepublishOnly": "npm run update-template && npm run build-cli"
  },
  "keywords": [
    "cron",
    "task",
    "scheduler",
    "nextjs",
    "cli"
